<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 title="Ajouter un contact">
    <fx:Metadata>
        [Event(name="addContact", type="ttfx.bdx.tdd.contacts.view.AddContactEvent")]
    </fx:Metadata>
    <fx:Script>
        <![CDATA[
            import mx.events.FlexEvent;
            protected function add_buttonDownHandler(event:FlexEvent):void {
                dispatchEvent(new AddContactEvent(AddContactEvent.ADD_CONTACT,
                    firstNameInput.text, lastNameInput.text));
                
                firstNameInput.text = "";
                lastNameInput.text = "";
            }
        ]]>
    </fx:Script>
    
	<mx:Form>
		<mx:FormItem label="PrÃ©nom">
			<mx:TextInput id="firstNameInput">
				
			</mx:TextInput>
		</mx:FormItem>
		<mx:FormItem label="Nom">
			<mx:TextInput id="lastNameInput">
				
			</mx:TextInput>
		</mx:FormItem>
		<mx:FormItem>
			<s:Button id="addButton" label="Ajouter" buttonDown="add_buttonDownHandler(event)"/>
		</mx:FormItem>
	</mx:Form>
</s:Panel>
