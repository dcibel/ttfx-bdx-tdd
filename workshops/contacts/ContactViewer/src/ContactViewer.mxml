<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:view="ttfx.bdx.tdd.contacts.view.*"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   minWidth="955" minHeight="600"
			   creationComplete="onCreationComplete()">
	<fx:Script>
		<![CDATA[
			import mx.collections.IList;
			
			import ttfx.bdx.tdd.contact.service.ContactService;
			import ttfx.bdx.tdd.contact.service.ThirdPartyContactService;
			private var service:ContactService = new ThirdPartyContactService();
			
			private function onCreationComplete():void {
				service.getAllContacts(onResult,onFault);
			}
			
			private function onResult(list:IList):void {
				contacts.list.dataProvider = list;
			}
			
			private function onFault(error:Error):void {
				service.getAllContacts(onResult,onFault);
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>
	<s:HGroup width="600" height="400">
		<view:AddContactPanel>
			
		</view:AddContactPanel>
		<view:ContactListPanel id="contacts" width="100%" height="100%">
			
		</view:ContactListPanel>
	</s:HGroup>
</s:Application>
